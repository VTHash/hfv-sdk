{
  "name": "hfv-sdk",
  "version": "0.1.7",
  "description": "HFV SDK for bridge + prices + chain metadata",

  "type": "module",

  "main": "./dist/index.cjs", 
  "module": "./dist/index.js", 
  "types": "./dist/index.d.ts",

  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },

  "files": ["dist"],

  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsup src/index.ts --dts --format esm,cjs",
    "dev": "tsup src/index.ts --dts --format esm,cjs --watch"
  },

  "keywords": ["web3", "sdk", "bridge", "wormhole", "hfv"],

  "author": "HFV Protocol",
  "license": "MIT",

  "dependencies": {
    "axios": "^1.13.2"
  },

  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsup": "^8.0.1",
    "typescript": "^5.4.0"
  },

  "repository": {
    "type": "git",
    "url": "git+https://github.com/VTHash/hfv-sdk.git"
  },

  "publishConfig": {
    "access": "public"
  }
}